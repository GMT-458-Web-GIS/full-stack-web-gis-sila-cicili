@model IEnumerable<LibrarySystem.Models.Request>

<div class="container mt-5">
    <h2 class="text-primary">üîî Bekleyen Kitap Talepleri</h2>
    <hr />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">≈ûu an bekleyen talep yok.</div>
    }
    else
    {
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>√ñƒürenci</th>
                    <th>Talep Edilen Kitap</th>
                    <th>Talep Tarihi</th>
                    <th>ƒ∞≈ülemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User?.Username</td>
                        <td>@item.Book?.Title</td>
                        <td>@item.RequestDate?.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <a asp-action="Approve" asp-route-id="@item.RequestId" class="btn btn-success btn-sm">‚úÖ Onayla</a>
                            <a asp-action="Reject" asp-route-id="@item.RequestId" class="btn btn-danger btn-sm" onclick="return confirm('Reddetmek istediƒüine emin misin?');">‚ùå Reddet</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>