                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">Åube AdÄ±</label>
                            <input asp-for="Name" class="form-control" placeholder="Ã–rn: Merkez KÃ¼tÃ¼phane" required />
