<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    // 1. HaritayÄ± BaÅŸlat (BaÅŸlangÄ±Ã§: Ankara)
    var map = L.map('map').setView([39.9334, 32.8597], 6);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // --- Ä°KON TANIMLAMALARI ---
    
    // KÄ±rmÄ±zÄ± Ä°kon (Yeni Åube Ä°Ã§in)
    var redIcon = new L.Icon({
        iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-red.png',
        shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
        iconSize: [25, 41],
        iconAnchor: [12, 41],
        popupAnchor: [1, -34],
        shadowSize: [41, 41]
    });

    // Mavi Ä°kon (Mevcut Åubeler Ä°Ã§in)
    var blueIcon = new L.Icon({
        iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-blue.png',
        shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
        iconSize: [25, 41],
        iconAnchor: [12, 41],
        popupAnchor: [1, -34],
        shadowSize: [41, 41]
    });

    // 2. MEVCUT ÅUBELERÄ° HARÄ°TAYA EKLE (Controller'dan Gelen Veri)
    var existingBranches = @Html.Raw(Json.Serialize(ViewBag.ExistingBranches));

    if (existingBranches) {
        existingBranches.forEach(function(branch) {
            if(branch.lat && branch.lng) {
                L.marker([branch.lat, branch.lng], {icon: blueIcon})
                 .addTo(map)
                 .bindPopup("<b>ğŸ¢ " + branch.name + "</b><br><span style='color:grey'>Mevcut Åube</span>");
            }
        });
    }

    // 3. YENÄ° KONUM SEÃ‡ME (TÄ±klama OlayÄ±)
    var selectionMarker;

    map.on('click', function(e) {
        var lat = e.latlng.lat;
        var lng = e.latlng.lng;

        // Eski kÄ±rmÄ±zÄ± marker varsa sil
        if (selectionMarker) map.removeLayer(selectionMarker);
        
        // Yeni kÄ±rmÄ±zÄ± marker ekle
        selectionMarker = L.marker([lat, lng], {icon: redIcon}).addTo(map);

        // Formdaki gizli kutularÄ± doldur (TÃ¼rkÃ§e virgÃ¼l formatÄ±na dikkat ederek)
        document.getElementById('latitude').value = lat.toString().replace(".", ",");
        document.getElementById('longitude').value = lng.toString().replace(".", ",");
        
        // Bilgi kutusunu gÃ¼ncelle
        var infoBox = document.getElementById('coords-display');
        infoBox.className = "alert alert-success fw-bold";
        infoBox.innerHTML = "âœ… SeÃ§ilen Konum: " + lat.toFixed(5) + " / " + lng.toFixed(5);
    });
</script>